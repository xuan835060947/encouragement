<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.person.xuan.encouragement">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/red_leader_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.HomeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 声明widget对应的AppWidgetProvider -->
        <receiver android:name=".widget.EncouragementWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/app_widget" />
        </receiver>

        <service
            android:name=".service.ControlService"
            android:process="com.person.xuan.encouragement.service"></service>

        <!--<receiver android:name=".broadcastreceiver.ConfigurationChangeReceiver">-->
        <!--<intent-filter>-->
        <!--<action android:name="ANDROID.INTENT.ACTION.CONFIGURATION_CHANGED" />-->
        <!--<category android:name="ANDROID.INTENT.CATEGORY.DEFAULT" />-->
        <!--</intent-filter>-->
        <!--</receiver>-->
    </application>

</manifest>
